<Window x:Class="Chess3.GamePlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="785" Width="816" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Foreground="{x:Null}" Loaded="Window_Loaded">
    <Window.Background>
        <ImageBrush ImageSource="/Chess3;component/Images/Grainy Wood.jpg" />
    </Window.Background>
    <Grid>
        <Canvas Height="640" HorizontalAlignment="Left" Margin="78,71,0,0" Name="cnvBoard" VerticalAlignment="Top" Width="640"></Canvas>
        <Button Content="New Game" Height="28" Name="btnNewGame" Width="75" Click="btnNewGame_Click" Margin="644,718,76,0" />

        <Label Content="Label" Height="28" HorizontalAlignment="Left" Margin="78,37,0,0" Name="lblBlackPlayer" VerticalAlignment="Top" Width="156" Background="#97FFFFFF" />
        <Label Background="#97FFFFFF" Height="28" HorizontalAlignment="Left" Margin="332,37,0,0" Name="lblToPlay" VerticalAlignment="Top" Width="156" />
        <Label Content="Label" Height="28" Name="lblWhitePlayer" Width="156" Background="#97FFFFFF" Margin="78,718,560,0" />
    </Grid>
</Window>
